{% extends 'base.html.twig' %}



{% block body %}
<h1>Les catégories de questions</h1>
<table class="table table-bordered table-striped">
  <thead>
    <td>
      Catégorie
    </td>
    <td>
      Action
    </td>
  </thead>
  <tbody>

    {% for category in categories %}

      <tr>
        <td>{{ category.name }}</td>
        <td>

          <a class="btn" href="{{path('category_edit',{'id':category.id})}}">Modifier</a>
          <a class="btn" href="{{path('category_delete',{'id':category.id})}}">Supprimer</a>

        </td>
      </tr>

    {% endfor %}

  </tbody>
</table>
{% endblock %}
