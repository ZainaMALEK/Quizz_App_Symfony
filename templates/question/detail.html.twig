{% extends 'base.html.twig' %}

{% block body %}
<h1>Detail question</h1>
<table class="table table-bordered table-striped">
  <thead>
    <td>
      Question
    </td>
    <td>
      Catégorie
    </td>
    <td>
      Difficulté
    </td>
    <td>
      Réponse
    </td>
    <td>
      Actions
    </td>
